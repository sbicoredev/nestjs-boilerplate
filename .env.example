########################################
# Application Configuration
########################################
NODE_ENV="development" # Must be one of: development, staging, production, test
APP_NAME="NestJS Boilerplate"
APP_PREFIX="nestjs-boilerplate"            # optional, defaults to kebab-case of APP_NAME
# The network port number on which the application will listen for incoming HTTP requests.
# Must be a valid port number (1-65535). Ports below 1024 typically require elevated privileges.
APP_PORT=3000
# The base URL prefix prepended to all API routes.
# Example: "/api" results in routes like /api/health, /api/users
APP_ROUTE_PREFIX="/api"
# This is important when the app is behind a reverse proxy (e.g., Nginx, Traefik, ALB).
# Options:
# - true/false: trust all proxies (unsafe if not properly configured) or none (default).
# - string: single IP, CIDR, or special values ('loopback', 'linklocal', 'uniquelocal').
# - comma-separated list: multiple IPs/CIDRs/special values.
# - number: trust the nth hop from the front-facing proxy server.
# Default: false
APP_TRUST_PROXY="loopback"
# Specifies which external domains are permitted to make requests to this API.
# Example: "http://localhost:3000,https://app.example.com" or "*" to allow all origins (not recommended for production).
APP_CORS_ORIGINS="http://localhost:3000"
# The minimum severity level of log messages to record.
# Messages below this level will be ignored.
# Levels in order of severity: trace, debug, info, warn, error, fatal
# Use 'trace' for maximum detail, 'info' for production, 'error' for minimal logging.
APP_LOG_LEVEL="trace"
# The default language to use as a fallback if a translation is not available in the requested language.
APP_FALLBACK_LANGUAGE="en"

########################################
# Database Configuration
########################################
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="nestjs-boilerplate"
DB_USER="postgres"
DB_PASSWORD="super-secret"
DB_ENABLE_SSL=false
# Set to 'true' in production with valid certificates, 'false' for self-signed certificates.
# Note: Only applies when DB_ENABLE_SSL is 'true'.
DB_SSL_REJECT_UNAUTHORIZED=true
DB_CA=
DB_KEY=
DB_CERT=

########################################
# Redis (Cache, Rate Limiting, etc.)
########################################
# Optional connection string (overrides individual settings if provided)
# Format: redis://default:PASSWORD@HOST:PORT
REDIS_URL=redis://default:pass@localhost:6379
# Individual database settings (used if DB_URL is not set)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=pass            # Leave empty if authentication is not required
REDIS_CONNECT_TIMEOUT=10       # Connection timeout (seconds)
# TLS configuration (usually required for managed Redis services)
REDIS_ENABLE_TLS=false
REDIS_REJECT_UNAUTHORIZED=false
# TLS certificate paths (only needed if REDIS_ENABLE_TLS is enabled)
REDIS_CA=
REDIS_KEY=
REDIS_CERT=
# Redis Insight (local monitoring tool)
REDIS_INSIGHT_PORT=5540


########################################
# Cache
########################################
# How long cached data should live (min 1, max 604800 = 7 days).
CACHE_TTL=10 # In seconds
# Maximum number of items to store in the in-memory LRU cache.
CACHE_LRU_SIZE=5000


########################################
# Rate Limiting
########################################
RATE_LIMIT_ENABLED=true
# Time window for rate limiting (seconds)
RATE_LIMIT_TTL=10
# Maximum requests allowed per window
RATE_LIMIT_MAX=3
# Block duration after exceeding the limit (seconds)
RATE_LIMIT_BLOCK_DURATION=0

