{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "NestJS boilerplate",
  "author": "Sajid",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc --noEmit",
    "check": "ultracite check",
    "check:fix": "ultracite fix",
    "docker:up": "docker compose --env-file .env.docker -f docker-compose.yaml up -d",
    "docker:down": "docker compose --env-file .env.docker -f docker-compose.yaml down",
    "prepare": "husky"
  },
  "dependencies": {
    "@keyv/redis": "^5.1.5",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs-redis/kit": "^0.13.3",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.209.0",
    "@opentelemetry/exporter-prometheus": "^0.209.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.209.0",
    "@opentelemetry/resources": "^2.3.0",
    "@opentelemetry/sdk-metrics": "^2.3.0",
    "@opentelemetry/sdk-node": "^0.209.0",
    "@opentelemetry/sdk-trace-base": "^2.3.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@tygra/nestjs-graceful-shutdown": "^2.0.0",
    "cacheable": "^2.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "nestjs-cls": "^6.2.0",
    "nestjs-i18n": "^10.6.0",
    "nestjs-pino": "^4.5.0",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "pino-http": "^11.0.0",
    "pino-opentelemetry-transport": "^2.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/testing": "^11.1.11",
    "@scalar/nestjs-api-reference": "^1.0.13",
    "@types/bun": "^1.3.6",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "ultracite": "7.0.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
